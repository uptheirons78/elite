{
  "name": "elite",
  "version": "1.0.0",
  "description": "Booking App UI Design",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass -w sass/ -o dist/css/ --recursive",
    "devserver": "browser-sync start --server \"dist\" --files \"dist/*.html, dist/css/main.css\" ",
    "start": "npm-run-all --parallel devserver sass",
    "compile:sass": "node-sass sass/main.scss dist/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' dist/css/style.comp.css -o dist/css/style.prefix.css",
    "compress:css": "node-sass dist/css/style.prefix.css dist/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "deploy": "gh-pages -d docs"
  },
  "author": "Mauro Bono",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.2.1",
    "browser-sync": "^2.26.3",
    "gh-pages": "^2.0.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.1"
  }
}
